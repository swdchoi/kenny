<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">

      <div class="card shadow-sm border-0">
        <div class="card-header bg-white">
          <h5 class="fw-bold mb-0">Client Details</h5>
          <small class="text-muted">Add or update client information</small>
        </div>

        <div class="card-body">
          <%= form_with(model: client, local: true) do |form| %>

            <% if client.errors.any? %>
              <div class="alert alert-danger">
                <strong>
                  <%= pluralize(client.errors.count, "error") %> prevented saving:
                </strong>
                <ul class="mb-0 mt-2">
                  <% client.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Email -->
            <div class="mb-3">
              <%= form.label :email, class: "form-label fw-semibold" %>
              <%= form.email_field :email,
                    class: "form-control",
                    placeholder: "client@company.com" %>
            </div>

            <!-- Company Name -->
            <div class="mb-3">
              <%= form.label :company_name, class: "form-label fw-semibold" %>
              <%= form.text_field :company_name,
                    class: "form-control",
                    placeholder: "Company Ltd." %>
            </div>

            <!-- Phone -->
            <div class="mb-4">
              <%= form.label :phone, class: "form-label fw-semibold" %>
              <%= form.telephone_field :phone,
                    class: "form-control",
                    placeholder: "+852 1234 5678" %>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-between">
              <%= link_to "Cancel",
                    clientdash_path,
                    class: "btn btn-outline-secondary" %>

              <%= form.submit "Save Client",
                    class: "btn btn-outline-primary" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
